<h1>記事一覧</h1>

<div class="mb-3">
  <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
</div>

<div id="posts">
  <% @posts.in_groups_of(3, false) do |post_group| %>
    <div class="row">
      <% post_group.each do |post| %>
        <div class="col-md-4 my-3">
          <%= link_to post_path(post) do %>
            <% if post.picture.present? %>
              <%= image_tag(post.picture_url(:thumb), width: '100%') %>
            <% end %>
            <h5 class="mt-2"><%= post.title %></h5>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
