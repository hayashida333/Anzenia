<div class="mb-3 d-flex justify-content-between align-items-center">
  <h3>動画一覧</h3>
  <div class="d-flex gap-2">
    <%= link_to "新規動画登録", new_video_path, class: "btn btn-primary" %>
    <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <% @videos.each do |video| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <iframe class="card-img-top" width="100%" height="200" src="https://www.youtube.com/embed/<%= video.youtube_id %>" frameborder="0" allowfullscreen></iframe>
        <div class="card-body">
          <h5 class="card-title"><%= video.title %></h5>
          <p class="card-text"><%= truncate(video.description, length: 80) %></p>
          <%= link_to "詳細を見る", video_path(video), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
