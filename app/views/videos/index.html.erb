<div class="mb-3 d-flex justify-content-between align-items-center">
  <h3>動画一覧</h3>
  <%= link_to "新規動画登録", new_video_path, class: "btn btn-primary" %>
  <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
</div>

<% @videos.each do |video| %>
  <div class="mb-4">
    <h5><%= video.title %></h5>
    <p><%= video.description %></p>
    <%= link_to '詳細', video_path(video), class: "btn btn-outline-primary btn-sm" %>
  </div>
<% end %>
