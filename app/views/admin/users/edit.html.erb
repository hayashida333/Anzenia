<h2>従業員情報の編集</h2>

<%= form_for [:admin, @user], data: { turbo: false } do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="my-4">
    <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :first_name, "名", class: "form-label" %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :last_name, "姓", class: "form-label" %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :tel_number, "電話番号", class: "form-label" %><br />
    <%= f.text_field :tel_number, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :gender, "性別", class: "form-label" %><br />
    <%= f.select :gender, [["男性", "男性"], ["女性", "女性"], ["その他", "その他"], ["未設定", "未設定"]], {}, class: "form-select" %>
  </div>

  <div class="my-4">
    <%= f.label :japanese_level, "日本語の理解", class: "form-label" %><br />
    <%= f.select :japanese_level, [["上級", "上級"], ["中級", "中級"], ["初級", "初級"], ["未設定", "未設定"]], {}, class: "form-select" %>
  </div>

  <div class="my-4">
    <%= f.label :password, "パスワード（変更する場合のみ）", class: "form-label" %><br />
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.submit "更新", class: "btn btn-primary" %>
    <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
  </div>
<% end %>