<h2>登録</h2>

<%= form_for(@user, url: admin_users_path, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="my-4">
    <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :first_name, "名", class: "form-label" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :last_name, "姓", class: "form-label" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :tel_number, "電話番号", class: "form-label" %><br />
    <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="my-4">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>

