<table class="table table-striped">
    <style>
        table {
            width: 100%; /* テーブルの幅を100%に設定 */
            border-collapse: collapse; /* 境界線を重ねる */
        }

        thead th, tbody td, tfoot td {
            padding: 20px; /* セル内のパディングを大きくする */
            font-size: 18px; /* フォントサイズを大きくする */
            border: 1px solid #dddddd; /* セルの境界線を設定 */
        }

        thead th {
            background-color: #f2f2f2; /* ヘッダーの背景色を設定 */
        }

        tfoot td {
            background-color: #e9e9e9; /* フッターの背景色を設定 */
        }
    </style>
    <thead>
        <tr>
            <th>年月</th>
            <th>区分</th>
            <th>科目</th>
            <th>金額</th>
            <th>リンク</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <%= link_to "詳細", user_path(user), class: "btn btn-info" %>
                    <%= link_to "編集", edit_user_path(user), class: "btn btn-warning" %>
                    <%= link_to "削除", user_path(user), method: "delete", data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
