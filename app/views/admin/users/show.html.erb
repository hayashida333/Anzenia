<h2>従業員詳細</h2>

<table class="table table-bordered w-auto">
  <tr>
    <th>ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>姓</th>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <th>名</th>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @user.gender.presence || "未設定" %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @user.tel_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>日本語の理解</th>
    <td><%= @user.japanese_level.presence || "未設定" %></td>
  </tr>
  <tr>
    <th>登録日時</th>
    <td><%= @user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
</table>

<div class="mt-4">
  <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-warning me-2" %>
  <%= link_to "一覧に戻る", admin_users_path, class: "btn btn-secondary" %>
</div>