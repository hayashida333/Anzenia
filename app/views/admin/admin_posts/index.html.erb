<h1>投稿一覧（管理画面）</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= l(post.created_at, format: :short) %></td>
        <td>
          <%= link_to '編集', edit_admin_post_path(post) %> |
          <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規投稿', new_admin_post_path, class: "btn btn-primary" %>
