<h1>記事管理（管理者）</h1>

<div class="mb-3">
  <%= link_to "新規登録", new_admin_post_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作成日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to "編集", edit_admin_post_path(post), class: "btn btn-sm btn-warning" %>
          <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
