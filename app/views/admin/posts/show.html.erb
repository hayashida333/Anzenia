<h1><%= @post.title %></h1>

<p><%= @post.description %></p>

<% if @post.picture.present? %>
  <div class="mb-3">
    <strong>画像:</strong><br>
    <%= image_tag @post.picture.url, class: "img-fluid rounded", style: "max-width: 600px;" %>
  </div>
<% else %>
  <p>画像は未登録です。</p>
<% end %>

<div class="mt-3 d-flex gap-2">
  <%= link_to "編集", edit_admin_post_path(@post), class: "btn btn-warning" %>
  <%= link_to "一覧へ戻る", admin_posts_path, class: "btn btn-secondary" %>
</div>