<h1><%= @video.title %></h1>

<div class="mb-3">
  <strong>説明:</strong>
  <p><%= simple_format(@video.description) %></p>
</div>

<p>
  <strong>YouTube動画:</strong><br>
  <iframe width="560" height="315"
          src="https://www.youtube.com/embed/<%= @video.youtube_url %>"
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
  </iframe>
</p>

<div class="d-flex gap-2 mt-3">
<%= link_to "動画一覧に戻る", admin_videos_path, class: "btn btn-secondary" %>
<%= button_to "投稿を削除", admin_video_path(@video), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
</div>
