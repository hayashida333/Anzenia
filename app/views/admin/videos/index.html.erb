<h3 class="mb-4">動画一覧（管理者）</h3>

<!-- アクションボタン -->
<div class="mb-3 d-flex gap-2">
  <%= link_to "新規作成", new_admin_video_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成日</th> <!-- ここを説明から作成日に変更 -->
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.id %></td>
        <td><%= video.title %></td>
        <!-- 作成日を表示、フォーマットも整える -->
        <td><%= video.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td class="text-nowrap">
          <%= link_to "詳細", admin_video_path(video), class: "btn btn-sm btn-primary" %>
          <%= link_to "編集", edit_admin_video_path(video), class: "btn btn-sm btn-warning" %>
          <%= link_to "削除", admin_video_path(video), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- ✅ ページネーションリンク -->
<div class="mt-4">
  <%= paginate @videos %>
</div>
