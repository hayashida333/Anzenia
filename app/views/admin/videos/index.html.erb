<h3 class="mb-4">動画一覧（管理者）</h3>

<!-- アクションボタン -->
<div class="mb-3 d-flex gap-2">
  <%= link_to "新規動画登録", new_admin_video_path, class: "btn btn-primary" %>
  <%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>
</div>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th>ID</th>
      <th>動画</th>
      <th>タイトル</th>
      <th>説明</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.id %></td>
        <td style="width: 300px;">
          <iframe width="100%" height="150" src="https://www.youtube.com/embed/<%= video.youtube_id %>" frameborder="0" allowfullscreen></iframe>
        </td>
        <td><%= video.title %></td>
        <td><%= truncate(video.description, length: 60) %></td>
        <td class="text-nowrap">
          <%= link_to "詳細", admin_video_path(video), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "編集", edit_admin_video_path(video), class: "btn btn-sm btn-warning" %>
          <%= link_to "削除", admin_video_path(video), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
