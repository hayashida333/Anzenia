<h1>記事一覧</h1>

<div class="mb-3">
  <%= link_to " 新規投稿", new_idea_path, class: "btn btn-primary" %>
</div>

<div id="ideas">
  <% @ideas.in_groups_of(3, false) do |idea_group| %>

      <div class="row">
        <% idea_group.each do | idea | %>
          <div class="col-md-4 my-3">

            <%= link_to idea do %>

              <%= image_tag(idea.picture_url(:thumb), width: '100%') if idea.picture.present? %>
            <% end %>

          </div>

        <% end %>

      </div>
    <% end %>
  </div>
      